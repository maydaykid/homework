using System;

namespace easyCycle
{
    class Program
    {
        static void Main(string[] args)
        {
            string userMessage;
            int repeatAmount;

            Console.Write("Введите ваше сообщение: ");
            userMessage = Console.ReadLine();
            Console.Write("Введите необходимое число повторов: ");
            repeatAmount = Convert.ToInt32(Console.ReadLine());

            for(int i = 0; i < repeatAmount; i++)
            {
                Console.WriteLine(userMessage);
            }
        }
    }
}
